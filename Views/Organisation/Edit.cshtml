@model TenantSubscriptionApp.Core.ViewModels.OrganisationViewModel
@{
}
<main>
    <div class="py-5 text-center">
        <h2>Edit User</h2>
    </div>

    <div class="row g-5">
        <div class="col-md-7 col-lg-8">

            @using (Html.BeginForm("EditOrganisation", "Organisation"))
            {
                @Html.HiddenFor(h => @Model.Id);
                <div class="row g-3">
                    <div class="col-sm-6">
                        <label asp-for="@Model.Name" class="form-label"></label>
                        <input asp-for="@Model.Name" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="@Model.Name" class="text-danger">
                        </span>
                    </div>

                </div>

                <hr class="my-4">
                                
                <button class="w-100 btn btn-primary btn-lg" type="submit">Save</button>
            }
        </div>
    </div>
</main>
